<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/mulinormal</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>

    </style>


    <style name="ConnectionButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorAccent">#E4E9F2</item>
        <item name="colorControlNormal">#E4E9F2</item>
        <item name="colorControlActivated">#E4E9F2</item>
        <item name="colorControlHighlight">#E4E9F2</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="TitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_26</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineSpacing">@dimen/size_40</item>
    </style>

    <style name="TextViewSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>
        <item name="lineSpacing">@dimen/size_20</item>
    </style>


    <style name="TextViewSubTitle_new">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>
        <item name="lineSpacing">@dimen/size_20</item>
    </style>
    <style name="ProfileEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:paddingStart">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">@color/app_color</item>
        <item name="colorControlActivated">@color/app_color</item>
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>
    </style>


    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="colorControlActivated">@color/app_color</item>
    </style>

    <style name="VehicleButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
